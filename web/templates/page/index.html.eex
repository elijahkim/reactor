<div class=container>
  <div class=header-container>
    <h1 class=header-header>Reactor</h1>
    <p class=header-text>Test your reactions against your friends</p>
  </div>

  <%= form_for @conn, game_path(@conn, :create), [as: :game], fn f -> %>
    <%= label f, :name %>
    <%= text_input f, :name %>
    <%= submit "Create" %>
  <% end %>
</div>
